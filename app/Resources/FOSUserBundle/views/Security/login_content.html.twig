{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-horizontal container" action="{{ path("fos_user_security_check") }}" method="post">

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <fieldset>
        <legend>Log in ! </legend>
        <div class="form-group">
            <label class="col-lg-2 control-label" style="padding: 15px;color: #fff;" for="username">{{ 'security.login.username'|trans }}</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="username"/>
            </div>
        </div>
        <div class="form-group">

            <label class="col-lg-2 control-label" style="padding: 15px;color: #fff;"  for="password">{{ 'security.login.password'|trans }}</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="_password" required="required"placeholder="Password" />

            </div>

            <div class="col-lg-10">
                <label class=" control-label"  style="padding-top: 15px;color: #fff;"  for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <input type="checkbox" class="form-control" id="remember_me" name="_remember_me" value="on" />
            </div>

            <div class="col-lg-10">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" />
            </div>


        </div>





    </fieldset>
</form>
