{% extends "@ProjectBundle/Resources/views/Default/profil.html.twig" %}
{% block content %}
    <ul class="sounds-in-playlist">
        {% for sound in sounds %}
            <li>
                <a  href="#">{{ sound.id }} {{ sound.name }}</a>
                <ul class="action">
                    <li><a href="{{ path('delete_sound_from_playlist' ) }}">Delete</a></li>
                </ul>{'id':idPlaylist,'id2':sound.id }
                <!-- iframe integration -->
                {% include "@ProjectBundle/Resources/views/Playlists/sound-iframe.html.twig" %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}