{% extends "@ProjectBundle/Resources/views/Default/profil.html.twig" %}

{% block follows %}
    <ul class="follows">
        {% for follow in datas.list_followers %}
            <li>
                <a href="{{ path('user-profil', {'slug_username': follow.slug}) }}">
                    <img class="profil-img" src="{{ vich_uploader_asset(follow, 'imageFile') }}" alt="#">
                    {{ follow.username }}
                </a>
                {% if datas.actions %}
                    <ul class="action">

                    </ul>
                {% endif %}
                <!-- iframe integration -->
            </li>
        {% endfor %}
    </ul>
{% endblock %}