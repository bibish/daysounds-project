{% extends "@ProjectBundle/Resources/views/Default/layout.html.twig" %}

{% block main %}

    {% if datas is defined %}

        <div class="container home">
            <div class="row">
                <section class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    {% if datas.newUsers is defined %}
                        {% include "@ProjectBundle/Resources/views/Users/new-users.html.twig" %}
                    {% endif %}
                    {% if datas.latestPlaylists is defined %}
                        {% include "@ProjectBundle/Resources/views/Playlists/latest-playlist.html.twig" %}
                    {% endif %}
                </section>

                <section class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-lg-offset-1">

                        {% if datas.dayliSounds is defined %}
                            {% include "@ProjectBundle/Resources/views/Playlists/daysounds.html.twig" %}
                        {% endif %}





                </section>
                <section class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-lg-offset-1 ">

                        <div class="list-group col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                           <h3 class="list-group-item active text-center "> Filter by :</h3>
                            <a class="list-group-item" href="#">Artists<span class="glyphicon glyphicon-chevron-right"></span></a>
                            <a class="list-group-item" href="#">Kind<span class="glyphicon glyphicon-chevron-right"></span></a>
                            <a class="list-group-item" href="#">Owner<span class="glyphicon glyphicon-chevron-right"></span></a>
                            <a class="list-group-item" href="#">Most recent<span class="glyphicon glyphicon-chevron-right"></span></a>
                            <a class="list-group-item" href="#">Most listened<span class="glyphicon glyphicon-chevron-right"></span></a>
                        </div>

                </section>
            </div>
        </div>


    {% endif %}

    {% block fos_user_content %}{% endblock %}
    {% block settingsBlock %}{% endblock %}


{% endblock %}



