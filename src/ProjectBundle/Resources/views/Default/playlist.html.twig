{% extends "@ProjectBundle/Resources/views/Default/profil.html.twig" %}

{% block playlist %}
    <ul class="sounds-in-playlist">
        {% for sound in datas.sounds %}
            <div>
                <a  href="#">{{ sound.name }}</a>
                <!-- iframe integration -->
                {% include "@ProjectBundle/Resources/views/Playlists/sound-iframe.html.twig" %}
                {% if datas.actions %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"
                           data-toggle="dropdown" role="button" aria-expanded="false">Add sound to playlist <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            {% for list in datas.listPlaylists %}
                                <li><span>{{ path('user-profil',{'slug_username':app.user.slug}) }}</span>
                                    <a href="{{ path('add_sound_to_this_playlist',
                                    {'playlist_id': list.id, 'sound_id':sound.id}) }}">{{ list.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endif %}
            </div>
        {% endfor %}
    </ul>

{% endblock %}