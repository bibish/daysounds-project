{% if sound.players.name == "youtube" %}

    <iframe id="sound-{{ sound.id }}" width="560" height="315" src="{{ sound.link }}" frameborder="0" allowfullscreen></iframe>


{% elseif sound.players.name == "soundcloud" %}

    <iframe
            width="100%"
            height="450"
            scrolling="no"
            frameborder="no"
            src="https://w.soundcloud.com/player/?url={{ sound.link |escape }}&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>


{% endif %}